{
  "productName": "EncodingMan",
  "version": "1.0.0",
  "identifier": "com.encodingman.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "EncodingMan - CSV文字化け修正ツール",
        "width": 640,
        "height": 480,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "displayLanguageSelector": true,
        "languages": ["Japanese", "English"]
      }
    },
    "fileAssociations": [
      {
        "ext": ["csv"],
        "mimeType": "text/csv",
        "name": "CSV File",
        "role": "Editor"
      }
    ]
  }
}
